@inherits LayoutComponentBase


<MudLayout>
    <MudAppBar Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h5" Class="mt-1">Панель управления</MudText>
        </MudDrawerHeader>
            <AuthorizeView>
                <Authorized>
                    <div class="row mx-auto">
                        <a href="Identity/Account/Manage">
                            <MudAvatar Class="ml-16">
                                <MudIcon Icon="@Icons.Material.Filled.PermIdentity" />
                            </MudAvatar>                            
                        </a>
                        <form method="post" action="Identity/Account/LogOut">
                            <MudButton Variant="Variant.Filled" Color="Color.Secondary" ButtonType="ButtonType.Submit" Class="ml-4">Выход</MudButton>
                        </form>
                    </div>
                </Authorized>
            </AuthorizeView>        
    </MudAppBar>

    <MudMainContent Class="bg-control-panel">
        <MudContainer MaxWidth="MaxWidth.ExtraLarge">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

