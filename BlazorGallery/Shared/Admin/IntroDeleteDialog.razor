<MudDialog>
    <DialogContent>
        <MudText>@Context.EmbededCode</MudText>
        <MudText>@Context.MainText</MudText>
        <MudText>@Context.BodyText</MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Отменить</MudButton>
        <MudButton Color="Color.Secondary" Variant="Variant.Filled" OnClick="Delete">Удалить</MudButton>
    </DialogActions>
</MudDialog>

@code { [CascadingParameter] MudDialogInstance MudDialog { get; set; }

            [Parameter] public Intro Context { get; set; }

            void Delete() => MudDialog.Close(DialogResult.Ok(Context));
            void Cancel() => MudDialog.Cancel(); }
